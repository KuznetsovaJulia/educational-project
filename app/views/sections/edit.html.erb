<h2>Редактировать раздел</h2>
<%= simple_form_for(@section)  do |p| %>
  <%= p.error_notification %>
  <%= p.input :name %>
  <%= p.button :submit, class:'update_lesson' %>
<% end %>
<h2>Добавить урок</h2>
<%= simple_form_for(@lesson)  do |p| %>
  <%= p.input :name%>
  <%= p.button :submit, class:'create_lesson',id: @section.id %>
<% end %>
<%= render partial:  "lessons/lessons" %>